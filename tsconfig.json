{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Recommended for Vite
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true, // Required by Vite
    "noEmit": true, // tsc only type-checks; Vite handles build emit
    "jsx": "react-jsx",

    /* Linting */
    "strict": true, // Enable all strict type-checking options
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    "types": ["vite/client"] // Include Vite client types
  },
  "include": ["src", "vite.config.ts"], // Files for TypeScript to check
  "references": [{ "path": "./tsconfig.node.json" }] // For Node.js context files like vite.config.ts
}
